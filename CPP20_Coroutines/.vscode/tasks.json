{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Premake5: Generate Project Files - MinGW",
			"command": "premake5",
			"args": [
				"gmake2"
			],
			"problemMatcher": [],
			"group": {
				"kind":"build",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"label": "Premake5: Generate Project Files - MSVC",
			"command": "premake5",
			"args": [
				"vs2022"
			],
			"problemMatcher": [],
			"group": {
				"kind":"build",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"label": "Make: Build Debug",
			"command": "make",
			"args": [
				"--directory=${workspaceFolder}\\build",
				"config=debug"
			],
			"problemMatcher": [],
			"group": {
				"kind":"build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Cleanup",
			"command": "premake5",
			"args": [
				"clean"
			],
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}