# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  CPP_Iterators_config = debug
  HelperFunctions_config = debug
  EntityContainer_config = debug
  ProjectName_config = debug

else ifeq ($(config),release)
  CPP_Iterators_config = release
  HelperFunctions_config = release
  EntityContainer_config = release
  ProjectName_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := CPP_Iterators HelperFunctions EntityContainer ProjectName

.PHONY: all clean help $(PROJECTS) Core Dependencies

all: $(PROJECTS)

Core: ProjectName

Dependencies: CPP_Iterators EntityContainer HelperFunctions

CPP_Iterators: HelperFunctions
ifneq (,$(CPP_Iterators_config))
	@echo "==== Building CPP_Iterators ($(CPP_Iterators_config)) ===="
	@${MAKE} --no-print-directory -C CPP_Iterators -f Makefile config=$(CPP_Iterators_config)
endif

HelperFunctions:
ifneq (,$(HelperFunctions_config))
	@echo "==== Building HelperFunctions ($(HelperFunctions_config)) ===="
	@${MAKE} --no-print-directory -C HelperFunctions -f Makefile config=$(HelperFunctions_config)
endif

EntityContainer:
ifneq (,$(EntityContainer_config))
	@echo "==== Building EntityContainer ($(EntityContainer_config)) ===="
	@${MAKE} --no-print-directory -C EntityContainer -f Makefile config=$(EntityContainer_config)
endif

ProjectName: CPP_Iterators HelperFunctions EntityContainer
ifneq (,$(ProjectName_config))
	@echo "==== Building ProjectName ($(ProjectName_config)) ===="
	@${MAKE} --no-print-directory -C ProjectName -f Makefile config=$(ProjectName_config)
endif

clean:
	@${MAKE} --no-print-directory -C CPP_Iterators -f Makefile clean
	@${MAKE} --no-print-directory -C HelperFunctions -f Makefile clean
	@${MAKE} --no-print-directory -C EntityContainer -f Makefile clean
	@${MAKE} --no-print-directory -C ProjectName -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   CPP_Iterators"
	@echo "   HelperFunctions"
	@echo "   EntityContainer"
	@echo "   ProjectName"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"