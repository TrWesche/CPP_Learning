# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  ProjectMathModule_config = debug
  ProjectName_config = debug

else ifeq ($(config),release)
  ProjectMathModule_config = release
  ProjectName_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := ProjectMathModule ProjectName

.PHONY: all clean help $(PROJECTS) Core Modules

all: $(PROJECTS)

Core: ProjectName

Modules: ProjectMathModule

ProjectMathModule:
ifneq (,$(ProjectMathModule_config))
	@echo "==== Building ProjectMathModule ($(ProjectMathModule_config)) ===="
	@${MAKE} --no-print-directory -C ProjectMathModule -f Makefile config=$(ProjectMathModule_config)
endif

ProjectName: ProjectMathModule
ifneq (,$(ProjectName_config))
	@echo "==== Building ProjectName ($(ProjectName_config)) ===="
	@${MAKE} --no-print-directory -C ProjectName -f Makefile config=$(ProjectName_config)
endif

clean:
	@${MAKE} --no-print-directory -C ProjectMathModule -f Makefile clean
	@${MAKE} --no-print-directory -C ProjectName -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   ProjectMathModule"
	@echo "   ProjectName"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"