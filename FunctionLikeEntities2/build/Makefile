ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  BoxContainer_config = debug
  EncryptFunctor_config = debug
  DecryptFunctor_config = debug
  IsInRangeFunctor_config = debug
  ClassWithNestedLambda_config = debug
  ProjectName_config = debug

else ifeq ($(config),release)
  BoxContainer_config = release
  EncryptFunctor_config = release
  DecryptFunctor_config = release
  IsInRangeFunctor_config = release
  ClassWithNestedLambda_config = release
  ProjectName_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := BoxContainer EncryptFunctor DecryptFunctor IsInRangeFunctor ClassWithNestedLambda ProjectName

.PHONY: all clean help $(PROJECTS) Core Dependencies

all: $(PROJECTS)

Core: ProjectName

Dependencies: BoxContainer ClassWithNestedLambda DecryptFunctor EncryptFunctor IsInRangeFunctor

BoxContainer:
ifneq (,$(BoxContainer_config))
	@echo "==== Building BoxContainer ($(BoxContainer_config)) ===="
	@${MAKE} --no-print-directory -C BoxContainer -f Makefile config=$(BoxContainer_config)
endif

EncryptFunctor:
ifneq (,$(EncryptFunctor_config))
	@echo "==== Building EncryptFunctor ($(EncryptFunctor_config)) ===="
	@${MAKE} --no-print-directory -C EncryptFunctor -f Makefile config=$(EncryptFunctor_config)
endif

DecryptFunctor:
ifneq (,$(DecryptFunctor_config))
	@echo "==== Building DecryptFunctor ($(DecryptFunctor_config)) ===="
	@${MAKE} --no-print-directory -C DecryptFunctor -f Makefile config=$(DecryptFunctor_config)
endif

IsInRangeFunctor:
ifneq (,$(IsInRangeFunctor_config))
	@echo "==== Building IsInRangeFunctor ($(IsInRangeFunctor_config)) ===="
	@${MAKE} --no-print-directory -C IsInRangeFunctor -f Makefile config=$(IsInRangeFunctor_config)
endif

ClassWithNestedLambda:
ifneq (,$(ClassWithNestedLambda_config))
	@echo "==== Building ClassWithNestedLambda ($(ClassWithNestedLambda_config)) ===="
	@${MAKE} --no-print-directory -C ClassWithNestedLambda -f Makefile config=$(ClassWithNestedLambda_config)
endif

ProjectName: BoxContainer DecryptFunctor EncryptFunctor IsInRangeFunctor ClassWithNestedLambda
ifneq (,$(ProjectName_config))
	@echo "==== Building ProjectName ($(ProjectName_config)) ===="
	@${MAKE} --no-print-directory -C ProjectName -f Makefile config=$(ProjectName_config)
endif

clean:
	@${MAKE} --no-print-directory -C BoxContainer -f Makefile clean
	@${MAKE} --no-print-directory -C EncryptFunctor -f Makefile clean
	@${MAKE} --no-print-directory -C DecryptFunctor -f Makefile clean
	@${MAKE} --no-print-directory -C IsInRangeFunctor -f Makefile clean
	@${MAKE} --no-print-directory -C ClassWithNestedLambda -f Makefile clean
	@${MAKE} --no-print-directory -C ProjectName -f Makefile clean

