# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  coro_config = debug
  ProjectName_config = debug

else ifeq ($(config),release)
  coro_config = release
  ProjectName_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := coro ProjectName

.PHONY: all clean help $(PROJECTS) Core Dependencies

all: $(PROJECTS)

Core: ProjectName

Dependencies: coro

coro:
ifneq (,$(coro_config))
	@echo "==== Building coro ($(coro_config)) ===="
	@${MAKE} --no-print-directory -C coro -f Makefile config=$(coro_config)
endif

ProjectName: coro
ifneq (,$(ProjectName_config))
	@echo "==== Building ProjectName ($(ProjectName_config)) ===="
	@${MAKE} --no-print-directory -C ProjectName -f Makefile config=$(ProjectName_config)
endif

clean:
	@${MAKE} --no-print-directory -C coro -f Makefile clean
	@${MAKE} --no-print-directory -C ProjectName -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   coro"
	@echo "   ProjectName"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"